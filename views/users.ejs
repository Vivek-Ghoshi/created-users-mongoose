<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
   <div class="main w-full min-h-screen tracking-tighter bg-zinc-400 text-white ">
    <h2 class="p-5 text-3xl text-blue-800">USERS DATA</h2>
   <div class="users flex gap-4 p-10">
   <% if(user){ %>
    <% user.forEach(function(user){%>
        <div class="user w-60 h-55 text-xl p-5 rounded-md bg-blue-300">
               <h3 class="block"><%= user.name%></h3>
                <h3 class="block"><%= user.username %></h3>
                <h3 class="block"><%= user.email%></h3> 
    
                   <div class="flex gap-4 ">
                    <a class="text-yellow-600 text-l" href="/edit/<%= user._id %>">Edit</a>
                    <a class="text-red-600" href="/delete/<%= user._id%>">Delete</a>
                   </div>
               
         </div>
        <% })%>
   <% } else{ %>
        <h3> NO users accounts found</h3>
    <% }%>
   </div>
   </div>
</body>
</html>